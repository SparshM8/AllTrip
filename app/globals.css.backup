@import 'lenis/dist/lenis.css';
@tailwind base;
@tailwind components;
@tailwind utilities;

/* --------------------------------------
   Base Theme Variables & Resets
--------------------------------------- */
@layer base {
  :root {
    /* Modern Travel Brand Palette */
    --primary-50: 249 250 251;
    --primary-100: 243 244 246;
    --primary-200: 229 231 235;
    --primary-300: 209 213 219;
    --primary-400: 156 163 175;
    --primary-500: 107 114 128;
    --primary-600: 75 85 99;
    --primary-700: 55 65 81;
    --primary-800: 31 41 55;
    --primary-900: 17 24 39;
    --primary-950: 3 7 18;

    /* Vibrant Accent Colors */
    --accent-50: 255 251 235;
    --accent-100: 254 243 199;
    --accent-200: 253 230 138;
    --accent-300: 252 211 77;
    --accent-400: 251 191 36;
    --accent-500: 245 158 11; /* Main accent */
    --accent-600: 217 119 6;
    --accent-700: 180 83 9;
    --accent-800: 146 64 14;
    --accent-900: 120 53 15;
    --accent-950: 69 26 3;

    /* Ocean & Nature Palette */
    --ocean-50: 240 249 255;
    --ocean-100: 224 242 254;
    --ocean-200: 186 230 253;
    --ocean-300: 125 211 252;
    --ocean-400: 56 189 248;
    --ocean-500: 14 165 233; /* Ocean blue */
    --ocean-600: 2 132 199;
    --ocean-700: 3 105 161;
    --ocean-800: 7 89 133;
    --ocean-900: 12 74 110;
    --ocean-950: 8 47 73;

    /* Forest & Earth Tones */
    --forest-50: 236 253 245;
    --forest-100: 209 250 229;
    --forest-200: 167 243 208;
    --forest-300: 110 231 183;
    --forest-400: 52 211 153;
    --forest-500: 16 185 129; /* Forest green */
    --forest-600: 5 150 105;
    --forest-700: 4 120 87;
    --forest-800: 6 95 70;
    --forest-900: 6 78 59;
    --forest-950: 4 47 46;

    /* Warm Sunset Palette */
    --sunset-50: 255 247 237;
    --sunset-100: 255 237 213;
    --sunset-200: 254 215 170;
    --sunset-300: 253 186 116;
    --sunset-400: 251 146 60;
    --sunset-500: 249 115 22; /* Sunset orange */
    --sunset-600: 234 88 12;
    --sunset-700: 194 65 12;
    --sunset-800: 154 52 18;
    --sunset-900: 124 45 18;
    --sunset-950: 67 20 7;

    /* Neutral & Surface Colors */
    --surface-50: 250 250 250;
    --surface-100: 245 245 245;
    --surface-200: 229 229 229;
    --surface-300: 212 212 212;
    --surface-400: 163 163 163;
    --surface-500: 115 115 115;
    --surface-600: 82 82 82;
    --surface-700: 64 64 64;
    --surface-800: 38 38 38;
    --surface-900: 23 23 23;
    --surface-950: 10 10 10;

    /* Semantic Colors */
    --success: var(--forest-500);
    --warning: var(--sunset-500);
    --error: 0 84% 60%;
    --info: var(--ocean-500);

    /* Legacy shadcn/ui variables for compatibility */
    --background: var(--surface-50);
    --foreground: var(--primary-900);
    --card: var(--surface-50);
    --card-foreground: var(--primary-900);
    --popover: var(--surface-50);
    --popover-foreground: var(--primary-900);
    --primary: var(--primary-900);
    --primary-foreground: var(--surface-50);
    --secondary: var(--primary-100);
    --secondary-foreground: var(--primary-900);
    --muted: var(--primary-100);
    --muted-foreground: var(--primary-600);
    --accent: var(--accent-500);
    --accent-foreground: var(--primary-900);
    --destructive: var(--error);
    --destructive-foreground: var(--surface-50);
    --border: var(--primary-200);
    --input: var(--primary-200);
    --ring: var(--accent-500);
    --radius: 0.75rem;

    /* Enhanced Design Tokens */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);

    /* Gradient Definitions */
    --gradient-primary: linear-gradient(135deg, hsl(var(--accent-500)), hsl(var(--ocean-500)));
    --gradient-secondary: linear-gradient(135deg, hsl(var(--ocean-500)), hsl(var(--forest-500)));
    --gradient-warm: linear-gradient(135deg, hsl(var(--sunset-500)), hsl(var(--accent-500)));
    --gradient-cool: linear-gradient(135deg, hsl(var(--ocean-500)), hsl(var(--primary-600)));

    /* Typography Scale */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --font-size-4xl: 2.25rem;
    --font-size-5xl: 3rem;
    --font-size-6xl: 3.75rem;
    --font-size-7xl: 4.5rem;

    /* Spacing Scale */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-20: 5rem;
    --space-24: 6rem;
    --space-32: 8rem;

    /* Border Radius Scale */
    --radius-sm: 0.375rem;
    --radius: 0.5rem;
    --radius-md: 0.625rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --radius-3xl: 2rem;
    --radius-full: 9999px;

    /* Transitions */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);

    /* Z-index Scale */
    --z-dropdown: 1000;
    --z-sticky: 1020;
    --z-fixed: 1030;
    --z-modal-backdrop: 1040;
    --z-modal: 1050;
    --z-popover: 1060;
    --z-tooltip: 1070;

    color-scheme: light;
    /* Fixed navbar height (used for anchor offsets) */
    --nav-height: 5rem;
    /* Typography scale */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --font-size-4xl: 2.25rem;
    --font-size-5xl: 3rem;
    --leading-tight: 1.15;
    --leading-normal: 1.4;
    --leading-relaxed: 1.6;
    color-scheme: light dark; /* Hint UA of supported schemes */
  }

  .dark {
    /* Dark Mode Overrides */
    --background: var(--surface-950);
    --foreground: var(--surface-50);
    --card: var(--surface-900);
    --card-foreground: var(--surface-50);
    --popover: var(--surface-900);
    --popover-foreground: var(--surface-50);
    --primary: var(--surface-50);
    --primary-foreground: var(--surface-950);
    --secondary: var(--surface-800);
    --secondary-foreground: var(--surface-50);
    --muted: var(--surface-800);
    --muted-foreground: var(--surface-400);
    --accent: var(--accent-400);
    --accent-foreground: var(--surface-950);
    --destructive: 0 62.8% 50%;
    --destructive-foreground: var(--surface-50);
    --border: var(--surface-700);
    --input: var(--surface-700);
    --ring: var(--accent-400);

    /* Enhanced Dark Gradients */
    --gradient-primary: linear-gradient(135deg, hsl(var(--accent-400)), hsl(var(--ocean-400)));
    --gradient-secondary: linear-gradient(135deg, hsl(var(--ocean-400)), hsl(var(--forest-400)));
    --gradient-warm: linear-gradient(135deg, hsl(var(--sunset-400)), hsl(var(--accent-400)));
    --gradient-cool: linear-gradient(135deg, hsl(var(--ocean-400)), hsl(var(--primary-400)));

    color-scheme: dark;
  }
  /* Replaced @apply border-border */
  * { border-color: hsl(var(--border)); }
  html, body { -ms-overflow-style: none; }
  @supports (scrollbar-width: none) {
    html, body { scrollbar-width: none; }
  }
  html::-webkit-scrollbar, body::-webkit-scrollbar { display: none; }
  html.lenis { height: auto; }
  .lenis.lenis-smooth { scroll-behavior: auto !important; }
  .lenis.lenis-smooth [data-lenis-prevent] { overscroll-behavior: contain; }
}

